/*** Logging Flash projects using ThunderBolt AS3 v2.0beta* * @version	2.2* @author	Jens Krause [www.websector.de]* @date		03/08/09* @see		http://www.websector.de/blog/category/thunderbolt/* @see		http://code.google.com/p/flash-thunderbolt/* @source	http://flash-thunderbolt.googlecode.com/svn/trunk/as3/* * ************************ HAPPY LOGGING ;-)* ************************ */package  {		import flash.display.Sprite;		import flash.events.MouseEvent;		import flash.text.TextFormat;			import org.osflash.thunderbolt.Logger;			import fl.controls.Button;		import fl.controls.CheckBox;	public class FlashThunderBoltAS3Example extends Sprite	{		// vars			// const		    // instances				public function FlashThunderBoltAS3Example() 		{			init();			}		private function init (): void 		{			var txtFormat: TextFormat = new TextFormat();						txtFormat.font = "Arial";			txtFormat.bold = false;			txtFormat.color = 0xFFFFFF;			txtFormat.size = 15;								var labels: Array = ["info", "warn", "error", "debug", "memory"];						var i: int, l:int = labels.length;			for (i = 0; i < l; i++) 			{				var button : Button = new Button();				button.width = 80;				button.height = 40;				button.x = i * (10 + button.width) + 30;				button.y = 10;				button.label = labels[i];				button.setStyle("textFormat", txtFormat);				button.addEventListener(MouseEvent.CLICK, onClickButton);				this.addChild(button);			}			var txtFormat2: TextFormat = new TextFormat();						txtFormat2.font = "Arial";			txtFormat2.bold = false;			txtFormat2.color = 0x666666;			txtFormat2.size = 15;									var chBox: CheckBox = new CheckBox();			chBox.x = 30;			chBox.y = 70;			chBox.width = 150;			chBox.label = "Stop Logging";			chBox.setStyle("textFormat", txtFormat2);			chBox.addEventListener(MouseEvent.CLICK, hideThunderBolt);			this.addChild(chBox);						var chBox2: CheckBox = new CheckBox();			chBox2.move(chBox.x + chBox.width + 10, chBox.y);			chBox2.width = 250;			chBox2.label = "ThunderBolt AS3 Console";			chBox2.setStyle("textFormat", txtFormat2);			chBox2.addEventListener(MouseEvent.CLICK, useThunderBoltConsole);			this.addChild(chBox2);		};				private function onClickButton (event : MouseEvent) : void 		{			var button: Button = event.target as Button;			var label: String = button.label;			var myNumber: uint = 5;			var myString: String = "Lorem ipsum";			var myObject: Object = {exampleArray: ["firstValue", "secondValue"], y: 10, exampleString: "Hello", nestedObject: {x: 100, y: 200}};			var myArray: Array = ["firstValue",{x: 100, y: 200}, "secondValue"];						switch (label)			{				case "info":					Logger.about();					Logger.info("FLash is calling: A simple string", myString);					break;				case "warn":					Logger.warn ("FLash is calling: Two log objects: A number typed as int and a string", myNumber, myString);					break;				case "error":					Logger.error ("FLash is calling: An array with a nested object: ", myArray);					break;				case "debug":					Logger.debug ("FLash is calling: An object with a nested object and nested array", myObject);					break;				case "memory":					Logger.info("FLash is calling: " + Logger.memorySnapshot());					break;				default:					Logger.error ("FLash is calling: No button found with a label called " + label);			}					};			    private function hideThunderBolt(event: MouseEvent):void        {         	Logger.hide = event.target.selected;        }	    private function useThunderBoltConsole(event: MouseEvent):void        {         	Logger.console = event.target.selected;        }				///////////////////////////////////////////////////////////		// toString		///////////////////////////////////////////////////////////				override public function toString() : String 	    {		    return "[Instance of:  FlashThunderBoltAS3Example]";	    }	}}