/**	/// ------ TEXT BUTTONS		*/package pdh.text{	import flash.text.TextFieldAutoSize;	import flash.text.TextField;	import flash.events.MouseEvent		public class TextButtons	{		var TextUp:Class 		var TextDown:Class				function TextButtons(_TextUp:Class, _TextDown:Class):void 		{			TextUp = _TextUp			TextDown = _TextDown		}				public function attachTextButtons(item:TextField, buttonHolder):void 		{			trace("CREATING TEXT BUTTONS")						//var TextUp:Class = getDefinitionByName("TextUp") as Class;			var textUp_btn = new TextUp();			//textUp_btn.visible = false;			textUp_btn.fieldTarget = item;			textUp_btn.buttonMode = true;			textUp_btn.addEventListener(MouseEvent.MOUSE_DOWN, handleTextButtonUp, false, 0, true);			buttonHolder.addChild(textUp_btn);						//var TextDown:Class = getDefinitionByName("TextDown") as Class;			var textDown_btn = new TextDown();			//textDown_btn.visible = false;			textDown_btn.fieldTarget = item;			textDown_btn.buttonMode = true;			textDown_btn.addEventListener(MouseEvent.MOUSE_DOWN, handleTextButtonDown, false, 0, true);			buttonHolder.addChild(textDown_btn);						textUp_btn.visible = true;			textUp_btn.x = item.x + item.width;			textUp_btn.y = item.y;			textDown_btn.visible = true;				textDown_btn.x = item.x + item.width;			textDown_btn.y = item.y + item.height;		}				private function handleTextButtonDown(e:MouseEvent):void 		{			trace(e.target)			e.target.fieldTarget.scrollV ++		}				private function handleTextButtonUp(e:MouseEvent):void 		{			trace(e.target)			e.target.fieldTarget.scrollV --		}			}		}