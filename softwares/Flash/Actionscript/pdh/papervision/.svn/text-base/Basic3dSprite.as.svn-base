package pdh.papervision{	import org.papervision3d.render.BasicRenderEngine;	import org.papervision3d.view.Viewport3D;	import org.papervision3d.scenes.Scene3D;	import org.papervision3d.cameras.Camera3D;		import flash.display.Sprite;	import pdh.papervision.RenderManager;			public class Basic3dSprite extends Sprite	{				// ***********************		// required papervision variables		protected var scene				:Scene3D;		protected var camera			:Camera3D;		protected var view				:Viewport3D;		// ************************				protected var renderManager		:RenderManager;				function Basic3dSprite(useBasic:Boolean = false):void 		{			setupScene(500, 500);					}				protected function setupScene(__width, __height):void 		{			// create view port (width, height, autoscale, interactive)			view = new Viewport3D(__width, __height, true, false);				addChild(view);								// create scene			scene = new Scene3D();						// create camera			camera = new Camera3D();								renderManager = new RenderManager(this, scene, camera, view)							}								protected function render():void 		{			renderManager.render();		}									}		}