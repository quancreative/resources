package com.cortinaproductions.away3d{	import flash.geom.Point;	import away3d.core.render.*;	import away3d.containers.*;	import com.cortinaproductions.ui.virtualmouse.VirtualMouse	/**		Allows use of a virtual mouse with away3d	*/	 	/**	 * @author Paul	 */	public class VirtualMouseView3D extends View3D 	{			function VirtualMouseView3D(val:Object):void 		{			super(val);						virtualMouseMode = true;		}			public override function get mouseX():Number		{			if (virtualMouseMode){				var p:Point = new Point(VirtualMouse.stageMouseX, VirtualMouse.stageMouseY);				p = this.globalToLocal(p);				return p.x;			} else {				return super.mouseX;			}		}				public override function get mouseY():Number		{			if (virtualMouseMode){				var p:Point = new Point(VirtualMouse.stageMouseX, VirtualMouse.stageMouseY);				p = this.globalToLocal(p);				return p.y;			} else {				return super.mouseY;			}		}					}}