package com.cortinaproductions.away3d{	import away3d.core.base.Object3D;	import away3d.containers.View3D;	import flash.geom.Point;	import away3d.core.draw.ScreenVertex;		public class HelperFunctions	{				public static function convertTo2D(view:View3D, object3d:Object3D):Point 		{			var sv:ScreenVertex = view.camera.screen(object3d);			return new Point(sv.x + view.x, sv.y + view.y);		}				// returns the scale of the object relative to the view		public static function getScreenScale(view:View3D, object3d:Object3D):Number 		{			var sv:ScreenVertex = view.camera.screen(object3d);			var focal_length:Number = view.camera.z - 0;			var num:Number = focal_length / (focal_length + sv.z)			return num;			//return view.camera.fov / sv.z;		}					} // end class		}