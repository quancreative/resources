package com.cortinaproductions.kiosk{	import flash.ui.Mouse;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	import flash.display.Stage;	import flash.system.fscommand;	import flash.geom.Rectangle;	import flash.display.StageDisplayState;	public class FullScreen	{		private static var instance:FullScreen;		private static var allowInstantiation:Boolean;		var hidden:Boolean = true;		function FullScreen()		{			if (! allowInstantiation) {				throw new Error("Error: Instantiation failed: Use SingletonDemo.getInstance() instead of new.");			}		}				public static function getInstance():FullScreen		{			if (instance == null) {				allowInstantiation = true;				instance = new FullScreen();				allowInstantiation = false;			}			return instance;		}			public function enable(_stage:Stage, _width:Number = 0, _height:Number =0):void 		{			if (_width == 0){				_width =  _stage.stageWidth;			}						if (_height == 0){				_height = _stage.stageHeight;			}						var screenRectangle:Rectangle = new Rectangle(0, 0,_width, _height);			_stage.fullScreenSourceRect = screenRectangle;			_stage.displayState = StageDisplayState.FULL_SCREEN;					}			}}